generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  price       Float
  categoryId  Int
  sizes       Json
  Colors      Json
  productName String
  category    Category @relation(fields: [categoryId], references: [id])
  Image       Image[]
}

model Category {
  id           Int       @id @default(autoincrement())
  categoryName String
  Product      Product[]
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  role      Role   @default(ADMIN)
  firstName String
  lastName  String
  isVerified Boolean
}

model Image {
  id Int @id @default(autoincrement())
  path String 
  productId Int
  Product Product @relation(fields: [productId], references: [id])
}
enum Role {
  SUPERADMIN
  ADMIN
}
